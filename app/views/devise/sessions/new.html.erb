<div class="mx-auto lg:max-w-md w-full">
  <h1 class="text-4xl text-center">Log in</h1>
  <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), method: :post, class: 'flex flex-col') do |form| %>
      <%= form.label :email %><br />
      <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  
      <%= form.label :password %><br />
      <%= form.password_field :password, autocomplete: "current-password" %>
  
    <% if devise_mapping.rememberable? %>
      <div class='mt-2'>
        <%= form.check_box :remember_me %>
        <%= form.label :remember_me %>
      </div>
    <% end %>
      <%= form.button 'Login', class: 'border border-slate-300 border-transparent text-white font-semibold border-solid bg-blue-600 rounded-md hover:bg-blue-700 hover:border-blue-700 hover:text-white sm:mb-0 sm:w-auto p-1 my-3' %>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
